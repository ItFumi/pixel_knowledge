<div class="inner">
  <h1 id="logo">
    <%= link_to image_tag("/images/logo.png"), root_path %>
  </h1>
  <nav id="nav">
    <ul class="nav_menu">
      <% if user_signed_in? %>
        <li class="nav_item btn-group">
          <button type="button" class="dropdown-toggle nav_btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            マイメニュー
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "プロフィール", edit_user_registration_path(current_user) %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="nav_item">
          <button type="button" class="nav_btn" data-toggle="modal" data-target="#sign_in">ログイン</button>
        </li>
        <li class="nav_item">
          <button type="button" class="nav_btn" data-toggle="modal" data-target="#sign_up">無料会員登録</button>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
<% if !user_signed_in? %>
  <%= render "./modal/sign_in_form" %>
  <%= render "./modal/sign_up_form" %>
<% end %>
